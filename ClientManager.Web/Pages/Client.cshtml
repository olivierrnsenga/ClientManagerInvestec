@page
@model ClientManager.Web.Pages.ClientModel

@{
    ViewData["Title"] = "Client Registration";
}

<h1>@ViewData["Title"]</h1>

@if (Model.IsSuccess)
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Client.Id"/>
    <div class="form-group">
        <label asp-for="Client.FirstName" class="control-label">First Name</label>
        <input asp-for="Client.FirstName" class="form-control"/>
        <span asp-validation-for="Client.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.LastName" class="control-label">Last Name</label>
        <input asp-for="Client.LastName" class="form-control"/>
        <span asp-validation-for="Client.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.MobileNumber" class="control-label">Mobile Number</label>
        <input asp-for="Client.MobileNumber" class="form-control"/>
        <span asp-validation-for="Client.MobileNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.IdNumber" class="control-label">ID Number</label>
        <input asp-for="Client.IdNumber" class="form-control"/>
        <span asp-validation-for="Client.IdNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Client.PhysicalAddress" class="control-label">Physical Address</label>
        <input asp-for="Client.PhysicalAddress" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
