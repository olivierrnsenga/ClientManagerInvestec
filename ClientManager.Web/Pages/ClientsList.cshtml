@page
@model ClientsListModel

@{
    ViewData["Title"] = "Clients List";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Clients.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Mobile Number</th>
            <th>ID Number</th>
            <th>Physical Address</th>
            <th></th> 
        </tr>
        </thead>
        <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.MobileNumber</td>
                <td>@client.IdNumber</td>
                <td>@client.PhysicalAddress</td>
                <td>
                    <a href="@Url.Page("EditClient", new { id = client.Id })" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No clients have been registered.</p>
}
